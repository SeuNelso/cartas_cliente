{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 1 --timeout 120 --log-level info",
    "restartPolicyType": "ON_FAILURE"
  },
  "env": {
    "PYTHON_VERSION": "3.12.3"
  }
} 